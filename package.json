{
  "name": "@litewarp/graphile-tools",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format-and-lint": "biome check",
    "format-and-lint:fix": "biome check --fix",
    "format-and-lint:staged": "biome check --error-on-warnings --no-errors-on-unmatched --staged",
    "sync:list": "syncpack list-mismatches",
    "sync:fix": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "graphql-config": "^5.1.3",
    "prettier": "^3.2.5",
    "syncpack": "^12.4.0",
    "turbo": "^2.0.9",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "graphql": "16.1.0-experimental-stream-defer.6"
  },
  "packageManager": "pnpm@9.14.3",
  "engines": {
    "node": ">=20"
  }
}
